<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.companies.view.CompanyLoadingActivity">

    <include layout="@layout/appbar" />

    <ScrollView
        style="@style/LimitedMatchParentWidthConstraint"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintTop_toTopOf="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/company_logo_image_view"
                android:layout_width="@dimen/unlock_logo_size"
                android:layout_height="@dimen/unlock_logo_size"
                android:layout_marginTop="@dimen/quadra_margin"
                tools:background="@color/avatar_placeholder_background" />

            <TextView
                android:id="@+id/company_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin"
                android:textSize="18sp"
                tools:text="Company name" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/triple_margin">

                <Button
                    android:id="@+id/confirm_button"
                    style="@style/PrimaryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/add" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>