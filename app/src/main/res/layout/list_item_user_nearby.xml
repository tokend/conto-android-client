<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/half_standard_margin">

    <ImageView
        android:id="@+id/avatar_image_view"
        android:layout_width="@dimen/nearby_user_avatar_size"
        android:layout_height="@dimen/nearby_user_avatar_size"
        tools:background="@color/md_red_50" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_standard_margin"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:minLines="2"
        tools:text="Bobby Pink\nLong name" />

    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/half_standard_margin" />
</LinearLayout>